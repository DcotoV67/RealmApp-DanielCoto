<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/buttonNavInsertar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Insertar Patin"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/buttonNavBorrar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Borrar Patin"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/buttonNavBuscar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Buscar Patin (por marca)"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/buttonNavModificar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Modificar Patin"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/buttonNavListaPatins"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ver patines"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/listaPatinesTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"/>

    </LinearLayout>

</FrameLayout>